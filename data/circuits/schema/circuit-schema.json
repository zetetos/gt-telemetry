{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/zetetos/gt-telemetry/data/circuits/schema/circuit-schema.json",
    "title": "Gran Turismo Circuit Schema",
    "description": "JSON schema for Gran Turismo circuit configuration files",
    "type": "object",
    "properties": {
        "$schema": { "type": "string", "description": "JSON Schema reference for validation" },
        "Name": {
            "type": "string",
            "description": "The primary name of the circuit",
            "examples": [ "Cirque de La Sarthe", "Circuit de Barcelona-Catalunya" ]
        },
        "VariationName": {
            "type": "string",
            "description": "The full name including circuit variation or layout",
            "examples": [
                "24 Heures du Mans race track no chicane",
                "Circuit de Barcelona-Catalunya Rallycross Layout"
            ]
        },
        "Default": {
            "type": "boolean",
            "description": "Whether to use this variation when the circuit is known but not the specific variation"
        },
        "Country": {
            "type": "string",
            "pattern": "^[a-z]{2}$",
            "description": "Two-letter ISO 3166-1 alpha-2 country code",
            "examples": [ "us", "br", "jp", "gb", "de", "it", "fr" ]
        },
        "LengthMetres": { "type": "integer", "minimum": 1, "description": "Total length of the circuit in metres" },
        "Coordinates": {
            "type": "object",
            "description": "3D coordinate data for the circuit",
            "properties": {
                "Circuit": {
                    "type": "array",
                    "description": "Array of 3D coordinate points defining the circuit path",
                    "items": {
                        "type": "object",
                        "properties": {
                            "X": { "type": "number", "description": "X coordinate in 3D space" },
                            "Y": { "type": "number", "description": "Y coordinate in 3D space" },
                            "Z": { "type": "number", "description": "Z coordinate in 3D space" }
                        },
                        "required": [ "X", "Y", "Z" ],
                        "additionalProperties": false
                    },
                    "minItems": 1
                },
                "StartingLine": {
                    "type": "object",
                    "description": "3D coordinate point marking the starting line position",
                    "properties": {
                        "X": { "type": "number", "description": "X coordinate in 3D space" },
                        "Y": { "type": "number", "description": "Y coordinate in 3D space" },
                        "Z": { "type": "number", "description": "Z coordinate in 3D space" }
                    },
                    "required": [ "X", "Y", "Z" ],
                    "additionalProperties": false
                }
            },
            "required": [ "Circuit", "StartingLine" ],
            "additionalProperties": false
        }
    },
    "required": [ "Name", "VariationName", "Default", "Country", "LengthMetres", "Coordinates" ],
    "additionalProperties": false
}